<div class="container-fluid">
    <div class="row">
        <div class="col-12 mt-5">
            <div class="row">
                <div class="col-2">
                    <img src="{{image}}" class="card-img-top" alt="...">
                </div>
                <div class="col-10">
                    <a href="/">Go back</a>
                    <h3 class="mt-3 mb-4 fw-bold">{{title}}</h3>
                    <h4 class="mb-4 fw-bold">Director: {{director}}</h4>
                    <h5 class="mb-4 fw-bold">Starts</h5>
                    <ul>
                        {{#each stars}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                    <p class="w-50">{{description}}</p>
                    {{#each showtimes}}
                    {{this}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>